<div id="about">
  <div class="about-content">
    <h1>This template was built with <i class="fas fa-heart"></i> by</h1>
    <ul class="list-inline">
      <% data.buddies.each do |buddy| %>
        <li>
          <% link_to "https://kitt.lewagon.com/alumni/#{buddy.kitt_nickname}", target: "_blank" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{buddy.kitt_nickname}", class: "img-circle" %>
          <% end %>
          <h2><%= buddy.name %></h2>
          <p>
            <% link_to "https://github.com/#{buddy.kitt_nickname}", target: "_blank" do %>
              <i class="fab fa-github"></i> <%= buddy.kitt_nickname %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
